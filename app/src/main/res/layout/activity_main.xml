<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dasu.tvuidemo.MyTabLayout
        android:id="@+id/tab_main_menu"
        android:layout_width="match_parent"
        android:layout_height="86.67dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="30dp"
        app:tabBackground="@color/full_transparent"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"/>

    <com.dasu.tvuidemo.MyViewPager
        android:id="@+id/vp_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_main_menu"
        android:clipChildren="false"
        android:clipToPadding="false"/>

</RelativeLayout>
